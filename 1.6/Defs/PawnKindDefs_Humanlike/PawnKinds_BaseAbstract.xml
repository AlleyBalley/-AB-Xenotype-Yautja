<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--Base-->
	<PawnKindDef Name="ABYautjaBase" Abstract="True">
		<defaultFactionType>ABYautjaClan</defaultFactionType>
		<race>Human</race>
		<xenotypeSet>
			<xenotypeChances>
				<ABStandardYautja>0.75</ABStandardYautja>
				<ABBerserkYautja>0.09</ABBerserkYautja>
				<ABScoutYautja>0.05</ABScoutYautja>
				<ABSwordYautja>0.05</ABSwordYautja>
				<ABShieldYautja>0.05</ABShieldYautja>
				<ABGrendelKingYautja>0.01</ABGrendelKingYautja>
			</xenotypeChances>
		</xenotypeSet>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>ABYautja_Standard</li>
				</categories>
				<commonality>65</commonality>
			</li>
			<li>
				<categories>
					<li>Outlander</li>
				</categories>
				<commonality>5</commonality>
			</li>
			<li>
				<categories>
					<li>Tribal</li>
				</categories>
				<commonality>30</commonality>
			</li>
		</backstoryFiltersOverride>
		<chemicalAddictionChance>0.05</chemicalAddictionChance>
		<initialWillRange>2~4</initialWillRange>
		<initialResistanceRange>15~20</initialResistanceRange>
		<apparelAllowHeadgearChance>0.85</apparelAllowHeadgearChance>
		<apparelTags>
			<li>YautjaArmor</li>
			<li>YautjaHelmet</li>
			<li>YautjaApparel</li>
			<li>Neolithic</li>
		</apparelTags>
		<forcedTraits>
			<ABYautjaWarriorsMindset>0</ABYautjaWarriorsMindset>
		</forcedTraits>
		<nameMaker>ABNamerPerson_Yautja_Male</nameMaker>
		<nameMakerFemale>ABNamerPerson_Yautja_Female</nameMakerFemale>
	</PawnKindDef>
	
<!--Colonist Base-->
  <PawnKindDef Abstract="True" Name="BaseYautjaPawnKind">
