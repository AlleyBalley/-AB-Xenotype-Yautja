<?xml version="1.0" encoding="utf-8" ?>
<Defs>
		
	<!--Gloves-->
		<ThingDef ParentName="ABYautja_Extremitywear_Base">
			<defName>ABYautja_Armor_Gloves</defName>
			<label>Yautja Gloves</label>
			<description>A pair of leather fingerless gloves.</description>
			<graphicData>
				<texPath>Things/Equipment/Yautja_Gloves</texPath>
				<graphicClass>Graphic_Single</graphicClass>
			</graphicData>
			<statBases>
				<MarketValue>750</MarketValue>
				<MaxHitPoints>200</MaxHitPoints>
				<WorkToMake>7500</WorkToMake>
				<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
				<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
				<ArmorRating_Heat>0.6</ArmorRating_Heat>
				<Insulation_Heat>1</Insulation_Heat>
				<Insulation_Cold>2</Insulation_Cold>
				<Mass>1.5</Mass>
			</statBases>
			<stuffCategories>
				<li>Leathery</li>
			</stuffCategories>
			<costStuffCount>30</costStuffCount>
			<equippedStatOffsets>
				<WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
			</equippedStatOffsets>
			<recipeMaker>
				<researchPrerequisite>ABYautja_Tech_T1</researchPrerequisite>
				<skillRequirements>
					<Crafting>4</Crafting>
				</skillRequirements>
			</recipeMaker>
			<apparel>
				<countsAsClothingForNudity>false</countsAsClothingForNudity>
				<bodyPartGroups>
					<li>Hands</li>
				</bodyPartGroups>
				<layers>
					<li>Middle</li>
				</layers>
				<tags>
					<li>YautjaArmor</li>
					<li>YautjaLightArmor</li>
					<li>YautjaNormalArmor</li>
					<li>YautjaHeavyArmor</li>
					<li>YautjaEliteArmor</li>
					<li>YautjaOrnateArmor</li>
				</tags>
			</apparel>
		</ThingDef>
		
