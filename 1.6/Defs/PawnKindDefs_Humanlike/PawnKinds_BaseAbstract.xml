		<ABYautjaWarriorsMindset>0</ABYautjaWarriorsMindset>
	</forcedTraits>
  </PawnKindDef>	
	
<!--Civilian Base-->
	<PawnKindDef Name="ABYautjaBase_Civilian" ParentName="ABYautjaBase" Abstract="True">
		<combatPower>50</combatPower>
		<itemQuality>Normal</itemQuality>
		<isFighter>false</isFighter>
		<gearHealthRange>
			<min>0.2</min>
			<max>2.0</max>
		</gearHealthRange>
